#!/bin/bash -eu

set +u

function fetchAll {
  echo "do nothing"
  }



case "$1" in
  start)         fetchAll;;
  stop)          wget $DOWNLOAD_PATH -P $OPENSHIFT_REPO_DIR/php ;;
  restart)       
    get -r -nd -np $DOWNLOAD_PATH -P $OPENSHIFT_REPO_DIR/php
   ;;
  status)        fetchAll ;;
  reload)        
    wget $DOWNLOAD_PATH -P $OPENSHIFT_REPO_DIR/php
   ;;
  tidy)          fetchAll ;;
  pre-build)     fetchAll ;;
  build)         fetchAll ;;
  deploy)        fetchAll ;;
  post-deploy)   fetchAll ;;
  pre-snapshot)  fetchAll ;;
  post-snapshot) fetchAll ;;
  pre-restore)   fetchAll ;;
  post-restore)  fetchAll ;;
  *)           exit 0
esac

exit 0
